import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { AlertCircle, CheckCircle2, Lightbulb, Eye, Code2, Play, Pause, SkipBack, SkipForward, RotateCcw } from "lucide-react";
